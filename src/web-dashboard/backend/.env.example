# SLUDI Service URLs (provided by ICTA)
SLUDI_ESIGNET_SERVICE_URL=https://sludiauth.icta.gov.lk/service
SLUDI_ESIGNET_AUD_URL=https://sludiauth.icta.gov.lk/service/oauth/v2/token

# Client ID provided by ICTA after registration
SLUDI_CLIENT_ID=your_client_id_from_icta

# Private key (JWK format) - Generate using generate-sludi-keys.js
# Keep this secure and never share it!
SLUDI_CLIENT_PRIVATE_KEY={"p":"your_private_key_p","kty":"RSA","q":"your_private_key_q","d":"your_private_key_d","e":"AQAB","use":"sig","qi":"your_private_key_qi","dp":"your_private_key_dp","alg":"RS256","dq":"your_private_key_dq","n":"your_private_key_n"}

# Redirect URI (must match what you registered with ICTA)
# Development: http://localhost:3000/auth/callback
# Production: https://your-domain.com/auth/callback
SLUDI_REDIRECT_URI=http://localhost:3000/auth/callback

# Gemini AI Configuration (for chat assistance)
GEMINI_API_KEY=your_gemini_api_key_here
